{{#if tag}}
<h2>Recent Book Reviews {{tag}}:</h2>
{{else}}
<h2>Recent Book Reviews </h2>
{{/if}}

{{#each data}}
<article>
	<h2 class="title">{{this.title}}</h2> <i>{{time}}</i>
	<hr>
	<div class="reviews">
	    {{{this.reviews}}}...
	</div>
	<a href="/post/{{this.slug}}">Read more...</a>
</article>
{{else}}

<article>
    <h1>There are no blog reviews yet. :(</h1>
    <a href="/create">Write your first review!</a>
</article>
{{/each}}
